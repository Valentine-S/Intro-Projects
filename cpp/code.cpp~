 #include <iostream>

using std::cout;
using std::cin;


int main()
{
  int x;
  long factorial = 1;

  cout << "Please Enter a Positive Integer: ";
  cin >> x;

  for (int i = 1; i <= x; i++)
  {
    factorial *= i;
  }

  cout << "The Factorial of " << x << " = " << factorial << "\n" ; 


  return 0;
}
